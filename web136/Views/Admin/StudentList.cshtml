@{
    ViewBag.Title = "List";
    var id = ViewBag.id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Student List Page</h3>

<div id="divStudentListContent">
    <a href="~/Admin/Index?id=@ViewBag.id">Back</a>

    <table>
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Id</th>
                <th>First</th>
                <th>Last</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel">
            <tr>
                <td><a data-bind="attr:{href:'/Admin/EditStudent?id='+id}">Edit</a></td>
             <!--  <td><a href="~/Admin/EditStudent?id=" data-bind="text: id">Edit</a></td>--> 
                <td><a href="~/Admin/Index?id=@ViewBag.id">Delete</a></td>
                <td data-bind="text: id"></td>
                <td data-bind="text: first"></td>
                <td data-bind="text: last"></td>
                <td data-bind="text: email"></td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        require(['ViewModels/StudentViewModel'], function (studentViewModel) {
            var studentViewModelObj = new studentViewModel();
            studentViewModelObj.GetAll();
        });
    });
</script>
